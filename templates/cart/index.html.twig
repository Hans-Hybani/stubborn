{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Cart</h1>
        <table class="table table-bordered">
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Totale Price</th>
                <th>Action</th>
            </tr>
            {% for item in items %}
                <tr>
                    <th>{{ item.product.name }}</th>
                    <th>{{ item.product.price }}</th>
                    <th>{{ item.quantity}}</th>
                    <th>{{ item.product.price * item.quantity}}</th>
                    <td>
                        <a href="{{path('app_cart_product_remove',{'id':item.product.id})}}" class="text-danger text-decpration-none">Delete to card</a>
                    </td>
                </tr>

                {% else %}
                    <p>Votre panier est vide</p>
            {% endfor %}
        </table>
        {% if total > 0 %}
        <br><br>
        <h2>Total : {{ total }} Euros</h2>
        <div class="row">
            <a href="" class="btn btn-primary col-2 m-lg-1">Valider la commande</a>
            <a href="{{path('app_cart_remove')}}" class="btn btn-outline-danger col-2 m-lg-1">Supprimer le panier</a>
        </div>
        {% endif %}
        
    </div>
{% endblock %}
